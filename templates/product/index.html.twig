{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Category</th>
                <th>Receipt</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.category }}</td>
                <td>{{ product.receipt }}</td>

                <td>
                    {# <label for="img-select">Choisir un fichier</label>
                    <select name="img-select" id="img-select">
                        {% for img in product.image %}
                            <option value="{{ img }}" >{{ img }}</option>
                        {% endfor %}
                    </select>  #}
                    <ul>
                        {% for img in product.image %}
                            <li>{{ img }}</li>
                        {% endfor %}
                    </ul> 
                </td>

                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}">Create new</a>

    {# <hr> #}
    {# <a href="{{ path('category_index') }}">Categories index   ---></a> #}

{% endblock %}
