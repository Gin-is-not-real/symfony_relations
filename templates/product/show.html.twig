{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ product.category }}</td>
            </tr>
            <tr>
                <th>Receipt</th>
                <td>{{ product.receipt }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <ul>
                    {% for img in product.image %}
                        <li>{{ img }}</li>
                    {% endfor %}
                </ul> 
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
